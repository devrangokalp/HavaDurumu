            android:id="@+id/textView4" android:textSize="30sp" app:layout_constraintStart_toEndOf="@+id/tvSicaklik"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvSicaklik"/>
    <TextView
            android:text="aciklama"
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:id="@+id/tvAciklama" android:textSize="24sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvSicaklik"
