            android:layout_height="115dp" app:srcCompat="@drawable/icon_02"
            android:id="@+id/imgHavaResim" app:layout_constraintStart_toEndOf="@+id/tvSicaklik"
            android:layout_marginStart="100dp" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSehir" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.8"/>
    <TextView
